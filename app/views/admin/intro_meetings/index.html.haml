= link_to "New Intro Meeting", new_admin_intro_meeting_path

%table.table#intro_meetings
  %thead
    %tr
      %th Date
      %th Time
      %th
      %th
  %tbody
    - @intro_meetings.each do |meeting|
      %tr{id: "intro_meeting_#{meeting.id}"}
        %td= meeting.date
        %td= "#{meeting.starts_at.strftime('%l:%M %p')} - #{meeting.ends_at.strftime('%l:%M %p')}"
        %td= link_to "Registrations", admin_intro_meeting_registrations_path(meeting)
        %td= link_to "Delete", admin_intro_meeting_path(meeting), method: :delete,
          data: { confirm: "Are you sure you want to delete this intro meeting?" }
