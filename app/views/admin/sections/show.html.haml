.row
  .large-6.columns
    %p
      %h2
        Section:
        %strong= @section.title
  .large-6.columns
    %p
      %ul.inline-list.right
        %li= link_to fa_icon("pencil", text: "Edit Section"), edit_admin_workshop_section_path(@workshop, @section), class: "button secondary round"
        %li= link_to fa_icon("times", text: "Delete Section"), admin_workshop_section_path(@workshop, @section), class: "button secondary round",
          method: :delete, data: { confirm: "Are you sure you want to delete this workshop?" }
.row
  .large-8.columns
    #sectionCalendar{"data-meetings-url" => @meetings_url, "data-start-date" => @first_meeting_date}
  .large-4.columns
    %h4
      Meetings for
      %strong= @section.title
    %table#meetings
      %thead
        %tr
          %th ID
          %th Title
          %th Date
      %tbody
        - @meetings.each do |meeting|
          %tr
            %td= meeting.id
            %td= meeting.short_name
            %td[meeting]= meeting.starts_at.strftime("%B %d, %Y")
