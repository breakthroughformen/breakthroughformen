%header.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to fa_icon("home", text: "Breakthrough Men's Community"), root_path, class: "navbar-brand"
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        = render "admin/shared/navigation_links"
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            = image_tag gravatar_url(current_user.email, "25x25"), class: "img-rounded"
            %b.caret
          %ul.dropdown-menu
            = render "shared/navigation_menu_links"
