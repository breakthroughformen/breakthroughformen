%table.table
  %thead
    %tr
      %th.col-md-3
      %th
  %tbody
    %tr
      %td Name:
      %td= @user.name
    %tr
      %td Email:
      %td= @user.email
    %tr{class: "#{'warning' if @user.admin?}"}
      %td Role:
      %td
        - if user.admin?
          %span.label.label-default Admin
        - if user.alumni?
          %span.label.label-primary Alumni
    %tr
      %td Stripe Customer:
      %td= link_to @user.stripe_customer_id, stripe_customer_url(@user.stripe_customer_id), target: "_blank"
    %tr
      %td Created at:
      %td= @user.created_at
    %tr
      %td Updated at:
      %td= @user.updated_at
