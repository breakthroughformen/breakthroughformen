- content_for :head do
  = stylesheet_link_tag 'admin/users'

.row
  .large-6.columns
    %p
      %h2 Users
  .large-6.columns
    %p
      %ul.inline-list.right
        %li= link_to fa_icon("plus-circle", text: "New User"), new_admin_user_path, class: "button secondary round"
.row
  .large-9.columns
    %table#users
      %thead
        %tr
          %th ID
          %th Email
          %th Create at
          %th
          %th
      %tbody
        - @users.each do |user|
          %tr[user]
            %td= user.id
            %td= link_to user.email, [:admin, user]
            %td= user.created_at
            %td
              - if user.admin?
                %span.round.label Admin
            %td
              = link_to "View", [:admin, user]
              |
              = link_to "Edit", edit_admin_user_path(user)
              |
              = link_to "Delete", admin_user_path(user), method: :delete,
                data: { confirm: "Are you sure you want to delete this user?" }
  .large-3.columns