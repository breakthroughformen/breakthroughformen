- content_for :breadcrumbs do
  %ol.breadcrumb
    %li= link_to "Dashboard", [:admin, :root]
    %li.active Users

.container.users
  %header
    %h2= fa_icon("users", text: "Users")
  %hr
  .tabbable
    %ul.nav.nav-tabs
      %li.active= link_to fa_icon("list", text: "List"), [:admin, :users]
      %li= link_to fa_icon("plus", text: "Add new user"), [:new, :admin, :user]
  .main
    = render "users_table", users: @users
