.row
  .large-3.columns
    %p
      .sidebar
        = link_to "Edit User", edit_admin_user_path(@user), class: "button secondary round"
        = link_to "Delete User", admin_user_path(@user), class: "button secondary round",
          method: :delete, data: { confirm: "Are you sure you want to delete this user?" }
  .large-9.columns
    %p
      %h2 Profile
      %h3
        Email:
        = @user.email
