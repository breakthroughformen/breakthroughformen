.row
  .large-6.columns
    %p
      %h2= @user.email
  .large-6.columns
    %p
      %ul.inline-list.right
        %li= link_to fa_icon("pencil", text: "Edit User"), edit_admin_user_path(@user), class: "button secondary round"
        %li= link_to fa_icon("times", text: "Delete User"), admin_user_path(@user), class: "button secondary round",
          method: :delete, data: { confirm: "Are you sure you want to delete this user?" }
.row
  .large-9.columns
    %p
      Email:
      %strong= @user.email
