- content_for :breadcrumbs do
  %ol.breadcrumb
    %li= link_to "Dashboard", [:admin, :root]
    %li= link_to "Users", [:admin, :users]
    %li.active= @user.email

.container.user
  %header
    %h2= fa_icon("user", text: "User : #{@user.full_name} : #{@user.email}")
  %hr
  .tabbable
    %ul.nav.nav-tabs
      %li.active= link_to fa_icon("info-circle", text: "Show"), [:admin, @user]
      %li= link_to fa_icon("pencil", text: "Edit"), [:edit, :admin, @user]
      %li= link_to fa_icon("times", text: "Delete"), [:admin, @user], method: :delete, data: { confirm: "Are you sure you want to delete this user?" }
      %li= link_to fa_icon("chevron-left", text: "Back"), [:admin, :users]
  .main[@user]
    .row
      .col-md-6
        %br/
        %h4= "Account (#{@user.id})"
        %table.table
          %thead
            %tr
              %th.col-md-1
              %th
          %tbody
            %tr
              %td Name:
              %td= @user.full_name
            %tr
              %td Email:
              %td= @user.email
            %tr{class: "#{'warning' if @user.admin?}"}
              %td.col-md-1 Role:
              %td= "Admin" if @user.admin?
      .col-md-6
        %br/
        %h4 Profile
        %table.table
          %thead
            %tr
              %th.col-md-1
              %th
          %tbody
            %tr
              %td Address1:
              %td= @user.profile.address1
            %tr
              %td Address2:
              %td= @user.profile.address2
            %tr
              %td City/St/Zip:
              %td= "#{@user.profile.city}, #{@user.profile.state} #{@user.profile.zip_code}"
            %tr
              %td Birthday:
              %td= @user.profile.birthday
