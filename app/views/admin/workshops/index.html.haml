.row
  .large-6.columns
    %p
      %h2 Workshops
  .large-6.columns
    %p
      %ul.inline-list.right
        %li= link_to fa_icon("plus-circle", text: "New Workshop"), new_admin_workshop_path, class: "button secondary round"
.row
  .large-9.columns
    %table#workshop
      %thead
        %tr
          %th ID
          %th Title
          %th Create at
          %th
      %tbody
        - @workshops.each do |workshop|
          %tr[workshop]
            %td= workshop.id
            %td= link_to workshop.title, [:admin, workshop]
            %td= workshop.created_at
            %td
              = link_to "View", [:admin, workshop]
              |
              = link_to "Edit", edit_admin_workshop_path(workshop)
              |
              = link_to "Delete", admin_workshop_path(workshop), method: :delete,
                data: { confirm: "Are you sure you want to delete this workshop?" }
  .large-3.columns
