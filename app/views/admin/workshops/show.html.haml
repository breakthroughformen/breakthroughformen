.row
  .large-6.columns
    %p
      %h2= @workshop.title
  .large-6.columns
    %p
      %ul.inline-list.right
        %li= link_to fa_icon("pencil", text: "Edit Workshop"), edit_admin_workshop_path(@workshop), class: "button secondary round"
        %li= link_to fa_icon("times", text: "Delete Workshop"), admin_workshop_path(@workshop), class: "button secondary round",
          method: :delete, data: { confirm: "Are you sure you want to delete this workshop?" }
.row
  .large-9.columns
    %p
      Title:
      %strong= @workshop.title
    %table#workshop
      %thead
        %tr
          %th ID
          %th #
          %th Title
          %th Created at
          %th
      %tbody
        - @workshop.lessons.each do |lesson|
          %tr[lesson]
            %td= lesson.id
            %td= lesson.lesson_number
            %td= link_to lesson.title, [:admin, @workshop, lesson]
            %td= lesson.created_at
            %td
              = link_to "View", [:admin, @workshop, lesson]
              |
              = link_to "Edit", edit_admin_workshop_lesson_path(@workshop, lesson)
              |
              = link_to "Delete", admin_workshop_lesson_path(@workshop, lesson), method: :delete,
                data: { confirm: "Are you sure you want to delete this lesson?" }
  .large-3.columns
    %ul.inline-list
      %li= link_to fa_icon("plus-circle", text: "New Lesson"), new_admin_workshop_lesson_path(@workshop), class: "button secondary round"
