= simple_form_for message, url: contact_path do |f|
    = f.error_notification
    = f.input :name, placeholder: "Your Name"
    = f.input :email, placeholder: "Your Email"
    = f.input :message, as: :text, placeholder: "Your Message", input_html: { rows: '10' }
    = f.button :button, "Send Message".html_safe, class: "btn btn-primary", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Sending message..." }
