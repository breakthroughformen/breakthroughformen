= simple_form_for registration, wrapper: :bootstrap3_horizontal, defaults: {right_column_html: {class: "col-md-8"}, label_html: {class: "col-md-4"}}, html: {class: "form-horizontal", role: "form"} do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.submit "Register now", class: "btn btn-primary"
