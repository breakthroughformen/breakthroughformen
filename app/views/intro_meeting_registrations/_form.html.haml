= simple_form_for registration do |f|
  .form-inputs.panel
    .row
      .large-6.columns
        = f.input :first_name
      .large-6.columns
        = f.input :last_name
    = f.input :email
  .form-actions
    = f.submit 'Register now', class: "button"
    = link_to "Cancel", root_path, class: "button secondary"
