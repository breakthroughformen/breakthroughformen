!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %title= content_for?(:title) ? yield(:title) : "Breakthrough Men's Community"
    %meta{:content => content_for?(:description) ? yield(:description) : "Breakthrough Men's Community", :name => "description"}
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = yield :head
  %body{class: "#{controller_name}, #{action_name}"}
    - if signed_in?
      Signed in as: #{current_user.email} #{link_to 'Sign out', sign_out_path, :method => :delete}
    - else
      = link_to 'Sign in', sign_in_path

    - flash.each do |name, msg|
      - if msg.is_a?(String)
        .alert{:class => "alert-#{name == :notice ? "success" : "error"}"}
          %a.close{"data-dismiss" => "alert"} &#215;
          = content_tag :div, msg, :id => "flash_#{name}"

    .content
      = yield

    = yield :javascript
