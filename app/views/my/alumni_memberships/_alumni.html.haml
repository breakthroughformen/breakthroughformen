- if membership
  %table.table
    %thead
      %tr
        %th.col-md-3
        %th
    %tbody
      %tr
        %td Membership Level:
        %td= "#{alumni_level(membership.amount)} Level at $#{membership.amount} a #{membership.interval}"
      %tr
        %td Membership Status:
        %td= membership.status
      %tr
        %td Member Since:
        %td= membership.member_since
      %tr
        %td Credit Card:
        %td
          = "#{user.card_type} ending in #{user.card_last4} which expires on #{user.card_expiration}"
      %tr
        %td
        %td= render "update_credit_card", user: user
